    <div class="body">
        <div class="wrappersignin">

            <div class="heading">
                <h2>Welcome!</h2>
                <p>Sign In to your account</p>
                <strong style="padding-top:5px;"> @ViewBag.Messagelog</strong>
            </div>

            <div class="input-group">
                @Html.TextBoxFor(e => e.Email, null, new { @class = "input-field form-control", @placeholder = "abc@gmail.com" })
                @Html.ValidationMessageFor(e => e.Email, null, new { @class = "text-danger " })
            </div>

            <div class="input-group">
                @Html.TextBoxFor(e => e.Pass, null, new { @class = "input-field form-control", @type = "password", @placeholder = "Password" })
                @Html.ValidationMessageFor(e => e.Pass, null, new { @class = "text-danger " })
            </div>

            <div class="input-group row">

                <div class="row">
                    @Html.CheckBoxFor(e => e.remember, new { @class = "custom-checkbox" })
                    <label for="remember">Remember me?</label>
                </div>

                <div class="row">
                    @Html.ActionLink("Forget Password ?", "emailValidation", "Home")
                </div>
            </div>


            <div class="input-group">
                <button>Login <i class="fa-solid fa-arrow-right"></i></button>
            </div>
            <div style="text-align:center;padding-top:5px;">
                <p>Don't have account yet?</p>&nbsp;@Html.ActionLink("Signup", "Signup", "Home")
            </div>
        </div>
